<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="290dp"
        android:layout_height="275dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/maisVistos"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/maisVistos"
        app:layout_constraintTop_toBottomOf="@+id/maisVistos"
        app:srcCompat="@drawable/logo_2" />

    <EditText
        android:id="@+id/emailRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:width="300dp"
        android:drawableLeft="@drawable/email_1"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Email"
        android:inputType="text"
        android:textColor="#4D4250"
        android:textColorHint="#4D4250"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/nomeRegistro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomeRegistro"
        app:layout_constraintTop_toBottomOf="@+id/nomeRegistro" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="-95dp"
        android:fontFamily="@font/poppins"
        android:text="JÃ¡ possui uma conta?"
        android:textColor="#4D4250"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/solicitarRedefinicao"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solicitarRedefinicao"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="TelaLogin"
        android:text="Entrar"
        android:textColor="#E6A972"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="@+id/solicitarRedefinicao"
        app:layout_constraintTop_toBottomOf="@+id/solicitarRedefinicao" />

    <EditText
        android:id="@+id/senhaResgistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="300dp"
        android:drawableLeft="@drawable/senha_1"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Senha"
        android:inputType="text"
        android:textColor="#4D4250"
        android:textColorHint="#4D4250"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/emailRegistro"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/emailRegistro"
        app:layout_constraintTop_toBottomOf="@+id/emailRegistro" />

    <EditText
        android:id="@+id/nomeRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:width="300dp"
        android:drawableLeft="@drawable/perfil_1"
        android:drawablePadding="2dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Nome"
        android:inputType="textEmailAddress"
        android:paddingLeft="1dp"
        android:paddingRight="5dp"
        android:textColor="#4D4250"
        android:textColorHint="#4D4250"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/button1"
        android:layout_width="259dp"
        android:layout_height="69dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/rounded_buttom2"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/solicitarRedefinicao"
        android:layout_width="260dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_buttom"
        android:backgroundTint="#CF8884"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="cadastrarUsuario"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/senhaResgistro"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="@+id/senhaResgistro"
        app:layout_constraintTop_toBottomOf="@+id/senhaResgistro" />

    <TextView
        android:id="@+id/maisVistos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Entrar em sua conta"
        android:textColor="#4D4250"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>