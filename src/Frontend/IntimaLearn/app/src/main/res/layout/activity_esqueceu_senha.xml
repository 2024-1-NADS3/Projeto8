<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EsqueceuSenhaActivity">

    <Button
        android:id="@+id/botao1"
        android:layout_width="250dp"
        android:layout_height="69dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/rounded_buttom"
        android:backgroundTint="#E6A972"
        android:fontFamily="@font/poppins_semibold"
        android:text="a"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/solicitarRedefinicao" />

    <Button
        android:id="@+id/solicitarRedefinicao"
        android:layout_width="250dp"
        android:layout_height="69dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/rounded_buttom2"
        android:backgroundTint="#F6D169"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="solicitarRedefinicao"
        android:text="Solicitar token"
        android:textAllCaps="false"
        android:textColor="#4D4250"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/emailEsqueceuSenha2"
        app:layout_constraintStart_toStartOf="@+id/emailEsqueceuSenha2" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="362dp"
        android:layout_height="445dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/foto_perfil_1" />

    <EditText
        android:id="@+id/emailEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:width="300dp"
        android:drawableLeft="@drawable/email_1"
        android:drawablePadding="2dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="1dp"
        android:paddingRight="5dp"
        android:textColor="#4D4250"
        android:textColorHint="#4D4250"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView24"
        app:layout_constraintStart_toStartOf="@+id/imageView24"
        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

    <EditText
        android:id="@+id/emailEsqueceuSenha2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:width="300dp"
        android:drawableLeft="@drawable/email_1"
        android:drawablePadding="2dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint=" Confirme o e-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="1dp"
        android:paddingRight="5dp"
        android:textColor="#4D4250"
        android:textColorHint="#4D4250"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView24"
        app:layout_constraintStart_toStartOf="@+id/imageView24"
        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

</androidx.constraintlayout.widget.ConstraintLayout>